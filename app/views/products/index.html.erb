<h1>Welcome to my store... (to the "tune" of Flo Rida's "My House")</h1>

<button class='btn btn-info add'>Add Product</button>

<div class='add-form'>
	<form id='new_product' class='form-group'>
		<br>
		<input class='form-control' id='product_name' placeholder='name' name='product[name]' required=true /><br>
		<input class='form-control' id='product_price' placeholder='price' name='product[base_price]' required=true /><br>
		<input class='form-control' id='product_description' placeholder='description' name='product[description]' required=true /><br>
		<input class='form-control' id='product_quantity' placeholder='quantity' name='product[quanity_on_hand]' required=true /><br>
		<input class='form-control' id='product_color' placeholder='color' name='product[color]' required=true /><br>
		<input class='form-control' id='product_weight' placeholder='weight' name='product[weight]' required=true /><br>
		<button class='btn btn-primary' type='submit'>Submit</button>
	</form>
</div>


<table class='table table-striped table-responsive'>

	<thead>
		<th>Name</th>
		<th>Price</th>
		<th>Description</th>
		<th>Quantity</th>
		<th>Color</th>
		<th>Weight</th>

	</thead>

	<tbody id='products'>

		<div>
			<ul id='product'>
			</ul>
		</div>

	</tbody>

</table>